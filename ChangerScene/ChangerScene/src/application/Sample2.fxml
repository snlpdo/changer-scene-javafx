<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Sample2Controller">
   <children>
      <Label text="Conversation :" />
      <TextArea disable="true" prefHeight="400.0" prefWidth="400.0" />
      <Label text="Nouveau message :">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Label>
      <HBox>
         <children>
            <TextField minWidth="300.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button minWidth="100.0" mnemonicParsing="false" text="Envoyer" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
